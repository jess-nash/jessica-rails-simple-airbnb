<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Add a new flat</h1>
        <div class="mt-3">
          <%= simple_form_for [ @flat ] do |f| %>
            <div class="mb-3">
              <%= f.input :name %>
            </div>
              <%= f.input :address %>
            <div class="mb-3">
            </div>
            <div class="mb-3">
              <%= f.input :description %>
            </div>
            <div class="mb-3">
              <%= f.input :price_per_night %>
            </div>
            <div class="mb-3">
              <%= f.input :number_of_guests, input_html: { min: 0, max: 50 } %>
            </div>
            <div class="mb-3">
              <%= f.submit class: "btn btn-primary" %>
              <%= link_to "Cancel", flats_path, class: "btn btn-danger"  %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
